<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= title %></title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <style>
    /* Custom styles for table */
    .table-container {
      margin-top: 20px;
    }
    body{
      background-color: rgb(125, 165, 152);
    }
    .table-container h2 {
      margin-bottom: 20px;
    }

    .add-btn {
      margin-bottom: 10px;
    }

    /* Responsive table styles */
    @media (max-width: 576px) {
      .table-responsive {
        overflow-x: auto;
      }
    }
  </style>
</head>
<body>

<div class="container">
  <div class="table-container">
    <h2><%= title %></h2>
    <a href="/add" class="btn btn-sm btn-primary add-btn">Add Student</a>
    <div class="table-responsive">
      <table class="table table-light table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone No.</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(function(user){ %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= user.phone_no %></td>
              <td>
                <a href="edit/<%= user.id %>" class="btn btn-sm btn-primary">Edit</a>
                <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>

</body>
</html>
