      margin-bottom: 10px;
    }

    .card button {
      display: block;
      margin-top: 15px;
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      background-color: #333;
      color: #fff;
      font-size: 14px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .card button:hover {
      background-color: #555;
    }

    .full-screen-image {
      height: 100vh;
      display: flex;
      justify-content: center;
