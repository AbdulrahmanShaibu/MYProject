  <style>
    /* Reset default margin and padding */
    * {
      margin: 0;
      padding: 0;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: rgb(118, 165, 150);
    }

    header {
      background-color: #333;
      color: #fff;
      padding: 15px;
    }

    nav {
      display: flex;
      justify-content: flex-end;
    }

    nav a {
      color: #fff;
      text-decoration: none;
      margin-left: 15px;
      padding: 8px 12px;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }

    nav a:hover {
      background-color: #555;
    }

    .container {
      display: flex;
      justify-content: space-between;
      margin: 20px;
    }

    .card {
      width: 200px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      padding: 20px;
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: translateY(-5px);
    }

    .card h3 {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .card p {
      color: #888;
      margin-bottom: 10px;
    }

    .card img {
      max-width: 100%;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .card button {
      display: block;
      margin-top: 15px;
      padding: 8px 12px;
      border: none;
      border-radius: 4px;
      background-color: #333;
      color: #fff;
      font-size: 14px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .card button:hover {
      background-color: #555;
    }

    .full-screen-image {
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .full-screen-image img {
      max-width: 100%;
      max-height: 100%;
    }
  </style>
